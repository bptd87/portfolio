{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "cleanUrls": true,
  "trailingSlash": false,
  "redirects": [
    {
      "source": "/feed/:slug",
      "destination": "/project/:slug",
      "permanent": true
    },
    {
      "source": "/experiential-design/:slug",
      "destination": "/project/:slug",
      "permanent": true
    },
    {
      "source": "/experiential-design/all",
      "destination": "/portfolio?filter=experiential",
      "permanent": true
    },
    {
      "source": "/vectorworks-vault/:path*",
      "destination": "/scenic-studio",
      "permanent": true
    },
    {
      "source": "/resources/all",
      "destination": "/scenic-insights",
      "permanent": true
    },
    {
      "source": "/news/:slug",
      "destination": "/news/:slug",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    }
  ]
}
